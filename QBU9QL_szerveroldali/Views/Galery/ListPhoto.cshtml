@model IEnumerable<Galery>

<h2>Photo Gallery</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @{
        foreach (var item in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="@item.PhotoUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">@item.Name</h4>
                        <h4> <a href="Delete?uid=@item.Id" class="btn btn-primary">Delete</a></h4>
                    </div>
                </div>
            </div>
        }
    }

</div>
