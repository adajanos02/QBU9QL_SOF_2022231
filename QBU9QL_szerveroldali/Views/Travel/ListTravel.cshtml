@using Microsoft.AspNetCore.Identity
@model IEnumerable<Travel>
@inject SignInManager<SiteUser> SignInManager
@inject UserManager<SiteUser> UserManager


<ul>
    @foreach (var travel in Model)
    {
        
        <li class="title">@travel.StartingPoint - @travel.Destination
            <ul>
                <li>@travel.Distance Km</li>
            </ul>
            Szervező:
            <img src="@Url.Action("GetImage", "Travel", new {userid = travel.OwnerId})" />
            @if (travel.OwnerId == UserManager.GetUserId(User))
            {
                <a href="DeleteTravel?uid=@travel.Id">Delete</a>
            }
        </li>
    }
</ul>